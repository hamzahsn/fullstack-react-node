{
  "compilerOptions": {
    "outDir": "../../dist/client",
    "lib": ["ES2019", "DOM"],
    "composite": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": false,
    "rootDirs": ["."],
    "baseUrl": ".",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
        "@components/*": ["components/*"],
        "@containers/*": ["containers/*"],
        "@utils/*": ["utils/*"],
        "@assets/*": ["../../assets/*"],

    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"],
}